{
  "name": "hgnc-webapp",
  "version": "1.0.0",
  "description": "Google Apps Script web application for netball team management",
  "main": "Code.js",
  "scripts": {
    "deploy": "bash -c './scripts/efficient-deploy.sh \"$@\"' --",
    "deploy:efficient": "bash -c './scripts/efficient-deploy.sh \"$@\"' --",
    "ensure-access": "node ./scripts/ensure-deploy-access.js",
    "test": "./scripts/pre-deploy-check.sh",
    "test:unit": "node tests/unit/core-logic.test.js && node tests/unit/validation.test.js",
    "test:unit:watch": "nodemon --watch tests/unit --exec 'npm run test:unit'",
    "test:smoke": "node ./scripts/runtime-check.js",
    "test:extended": "node ./scripts/extended-smoke-test.js",
    "test:integration": "node ./scripts/integration-test.js",
    "test:screenshot-compare": "node ./scripts/compare-screenshots.js",
    "test:all": "npm run test:unit && npm run test && npm run test:integration",
    "coverage": "node ./scripts/coverage-reporter.js",
    "lint": "./scripts/run_html_lint.sh",
    "lint:shell": "command -v shellcheck >/dev/null 2>&1 && shellcheck scripts/*.sh scripts/hooks/* || { echo 'shellcheck not installed; skipping'; exit 0; }"
  },
  "devDependencies": {
    "@google/clasp": "^2.4.2",
    "jsdom": "^23.2.0",
    "nodemon": "^3.1.11",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0",
    "puppeteer-core": "^24.32.0"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "googleapis": "^118.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caseytoll/hgnc-webapp.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "google-apps-script",
    "netball",
    "team-management",
    "web-app"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/caseytoll/hgnc-webapp/issues"
  },
  "homepage": "https://github.com/caseytoll/hgnc-webapp#readme"
}

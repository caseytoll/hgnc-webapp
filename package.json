  "license": "ISC",
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.17",
    "canvas": "^3.2.1",
    "cheerio": "^1.2.0",
    "happy-dom": "^20.1.0",
    "node-fetch": "^2.7.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "html2canvas": "^1.4.1"
  }
}
